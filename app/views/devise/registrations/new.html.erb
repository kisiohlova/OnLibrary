<div class="form-container">
  <div class="form-body">
    <h2 class="form-title">Create account</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-input-container">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    input_html: { class: "form-input-field", placeholder: "Email Adress" },
                    label_html: { class: "form-input-label" }%>
      </div>
      <div class="form-input-container">
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" },
                    input_html: { class: "form-input-field", placeholder: "Password" },
                    label_html: { class: "form-input-label" }%>
      </div>
      <div class="form-input-container">
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" },
                    input_html: { class: "form-input-field", placeholder: "Confirm Password" },
                    label_html: { class: "form-input-label" }%>
      </div>
      <div class="form-input-container">
        <%= f.input :username,
                    required: true,
                    input_html: { class: "form-input-field", placeholder: "Username" },
                    label_html: { class: "form-input-label" }%>
      </div>
      <div class="form-input-container">
        <%= f.input :first_name,
                    required: true,
                    input_html: { class: "form-input-field", placeholder: "First Name" },
                    label_html: { class: "form-input-label" }%>
      </div>
      <div class="form-input-container">
        <%= f.input :last_name,
                    required: true,
                    input_html: { class: "form-input-field", placeholder: "Last Name" },
                    label_html: { class: "form-input-label" }%>
      </div>
      <br><%= f.button :submit, "Create account", class: "form-btn-submit" %>
    <% end %>
    <span class="text-gray-600">Already registered?</span>
    <%= link_to "Sign in", new_session_path(resource_name), class: "form-link" %>
  </div>
</div>
